{
	"name": "@labdigital/toolkit",
	"version": "0.0.1",
	"description": "A set of utilities for building typescript applications",
	"type": "module",
	"module": "./dist/index.js",
	"require": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"keywords": [],
	"author": "Lab Digital <opensource@labdigital.nl>",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/labd/js-toolkit"
	},
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"build": "tsup",
		"docs": "ts-readme components/**/*.(ts|tsx)",
		"publish:ci": "pnpm build && pnpm changeset publish",
		"test": "vitest run",
		"test:ci": "vitest run --coverage",
		"tsc": "tsc --noEmit",
		"format": "eslint src --fix && pnpm prettier --write .",
		"lint": "eslint src && pnpm prettier --check ."
	},
	"files": [
		"dist",
		"src"
	],
	"devDependencies": {
		"@changesets/cli": "^2.27.1",
		"@typescript-eslint/eslint-plugin": "^7.0.1",
		"@vitest/coverage-v8": "1.3.0",
		"eslint": "^8.56.0",
		"eslint-plugin-unused-imports": "^3.1.0",
		"prettier": "3.2.5",
		"prettier-plugin-organize-imports": "3.2.4",
		"prettier-plugin-packagejson": "2.4.11",
		"ts-readme": "^1.1.3",
		"tsup": "^8.0.2",
		"typescript": "^5.3.3",
		"vitest": "1.3.0"
	}
}
